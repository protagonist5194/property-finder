<section class="form-log in text center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <!--<img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">-->
      <h1 class="h3 mt-5 mb-3 font-weight-normal">please sign in</h1>
      <label for="inputEmail" class="sr-only">Email address</label>
      <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Email address", autocomplete: "current_email" %>
     <br/><br/>
      <label for="inputPassword" class="sr-only">Password</label>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "form-control", id: "inputpassword" %>

      <br/>
      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div>
      <button class="btn btn-dark btn-primary btn-block" type="submit">sign in</button>
  <% end %>


  <%= render "devise/shared/links" %>
</section>


